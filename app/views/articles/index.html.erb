<h1>記事一覧</h1>
<p><%= link_to "記事作成",new_article_path %></p>
<table border="1", class="msr_table01">
<thead>
  <tr>
    <th>title</th>
    <th>Text</th>
    <th>UPDATE_DATE</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
</thead>
<% @article.each do |article| %>
 <tr>
   <td><%= link_to article.title ,article_path(article)%></td>
   <td><%= article.text %></td>
   <td><%= article.updated_at%></td>
   <td><%= link_to "編集",edit_article_path(article) %></td>
   <td><%= link_to "削除",article_path(article),method: :delete,data:{confirm: "本当によろしいですか?"} %>
 </tr>
  <% end %>
</table><br>
<%= link_to "トップへ戻る",welcome_index_path %>
